    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Camunda8 SDK Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/Camunda8/Camunda8.csproj"
        },
        {
            "name": "Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/tests/bin/Camunda8.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "logging": {
                "moduleLoad": false
            },
            "internalConsoleOptions": "openOnSessionStart" 
        }

    ]
}